@model IEnumerable<NewspaperSubscription.Models.Vendor>

@{
    ViewData["Title"] = "GetAllVendors";
}

<h1>GetAllVendors</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Vendorname)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.VendorcityNavigation)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Vendorname)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.VendorcityNavigation.Cityid)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Vendorid">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Vendorid">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Vendorid">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
